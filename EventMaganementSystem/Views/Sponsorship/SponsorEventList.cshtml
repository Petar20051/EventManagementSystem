@using EventManagementSystem.Core.Models.Events
@model List<ExtendedEventViewModel>

<h2>Select an Event to Sponsor</h2>

<table class="table">
    <thead>
        <tr>
            <th>Event Name</th>
            <th>Date</th>
            <th>Venue</th>
            <th>Description</th>
            <th>Contact</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ev in Model) 
        {
            <tr>
                <td>@ev.Name</td>
                <td>@ev.Date.ToString("MM/dd/yyyy")</td>
                <td>@ev.Venue</td>
                <td>@ev.Description</td>
                <td>
                    <a href="mailto:@ev.OrganizerEmail">@ev.OrganizerEmail</a><br />
                </td>
                <td>
                    <a asp-action="ProcessSponsorship" asp-route-id="@ev.Id" class="btn btn-primary">Sponsor this Event</a>
                </td>
            </tr>
        }
    </tbody>
</table>