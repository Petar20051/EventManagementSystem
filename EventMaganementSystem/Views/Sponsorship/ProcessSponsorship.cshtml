@using EventManagementSystem.Core.Models.Sponsorship
@model ProcessSponsorshipViewModel
<h2>Process Sponsorship</h2>

<form asp-action="ProcessSponsorship" method="post">
    <div class="form-group">
        <label asp-for="Amount" class="control-label"></label>
        <input asp-for="Amount" class="form-control" />
        <span asp-validation-for="Amount" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="SelectedCardId" class="control-label">Select a Saved Card</label>
        <select asp-for="SelectedCardId" class="form-control">
            <option value="">-- Select a card --</option>
            @foreach (var card in Model.Cards)
            {
                <option value="@card.CardId">Card ending in @card.Last4Digits</option>
            }
        </select>
        <span asp-validation-for="SelectedCardId" class="text-danger"></span>
    </div>

    <input type="hidden" asp-for="EventId" />

    <button type="submit" class="btn btn-primary">Submit Sponsorship</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}