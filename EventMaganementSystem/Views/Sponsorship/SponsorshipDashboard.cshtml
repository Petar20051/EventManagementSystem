@using EventManagementSystem.Core.Models.Sponsorship
@model SponsorshipDashboardViewModel

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h2 class="text-center mb-0">Your Sponsorship Tier: @Model.CurrentTier</h2>
        </div>
        <div class="card-body">
            <p class="text-center">Your total sponsorship amount: <strong>@Model.SponsoredAmount.ToString("C")</strong></p>

            <h3>Benefits of @Model.CurrentTier Sponsorship:</h3>
            <ul class="list-group">
                @foreach (var benefit in Model.Benefits)
                {
                    <li class="list-group-item">@benefit.Description</li>
                }
            </ul>
        </div>
        
    </div>
</div>
@if (TempData["Message"] != null)
{
    <div class="alert alert-success mt-3">
        @TempData["Message"]
    </div>
}
