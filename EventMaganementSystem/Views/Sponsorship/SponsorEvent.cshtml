@using EventManagementSystem.Core.Models.Sponsorship
@model ProcessSponsorshipViewModel

<h2>Sponsor Event</h2>

<form asp-action="ProcessSponsorship" method="post">
    <div class="form-group">
        <label for="Amount">Sponsorship Amount</label>
        <input type="number" name="Amount" value="100" class="form-control" min="1" required />
    </div>

    <div class="form-group">
        <label for="SelectedCardId">Select Payment Card</label>
        <select name="SelectedCardId" class="form-control" required>
            @foreach (var card in Model.Cards)
            {
                <option value="@card.CardId">@card.Last4Digits (Expires: @card.ExpirationDate)</option>
            }
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Submit Sponsorship</button>
</form>