@using EventManagementSystem.Core.Models.Account
@model AssignRoleViewModel

@{
    ViewData["Title"] = "Assign Role";
}

<h1 class="text-center">Assign Role to @Model.UserName</h1>

<div class="container mt-5">
    <form asp-action="AssignRole" method="post">
        <input type="hidden" asp-for="UserId" />

        <div class="form-group">
            <label for="role" class="form-label">Select Role</label>
            <select asp-for="SelectedRole" class="form-control">
                <option value="">-- Select a Role --</option>
                @foreach (var role in Model.AvailableRoles)
                {
                    <option value="@role">@role</option>
                }
            </select>
            <span asp-validation-for="SelectedRole" class="text-danger"></span>
        </div>

        <div class="mt-4">
            <button type="submit" class="btn btn-primary">Assign Role</button>
            <a asp-action="ViewUsers" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
