@using EventManagementSystem.Infrastructure.Data.Enums
@model EventManagementSystem.Core.Models.Events.CreateEventViewModel

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm p-4">
                <h2 class="text-center mb-4" style="color: #004080;">Create Event</h2>

                <form asp-action="Create" method="post">
                    

                    <div class="form-group mb-3">
                        <label asp-for="Name" class="form-label">Event Name</label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="EventType" class="form-label">Event Type</label>
                        <select asp-for="EventType" class="form-control" asp-items="Html.GetEnumSelectList<EventTypes>()">
                            <option value="">Select Event Type</option>
                        </select>
                        <span asp-validation-for="EventType" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Description" class="form-label">Description</label>
                        <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Date" class="form-label">Event Date</label>
                        <input asp-for="Date" type="datetime-local" class="form-control" value="@Model.Date.ToString("yyyy-MM-ddTHH:mm")" />
                        <span asp-validation-for="Date" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="ImageURL" class="form-label">Event Image URL</label>
                        <input asp-for="ImageURL" type="text" class="form-control" placeholder="Enter image URL (e.g., https://example.com/image.jpg)" />
                        <span asp-validation-for="ImageURL" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="VenueId" class="form-label">Select Venue</label>
                        <select asp-for="VenueId" class="form-control" asp-items="@(new SelectList(Model.Venues, "Id", "Name"))">
                            <option value="">-- Select Venue --</option>
                        </select>
                        <span asp-validation-for="VenueId" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-4">
                        <label asp-for="TicketPrice" class="form-label">Ticket Price</label>
                        <input asp-for="TicketPrice" type="number" class="form-control" step="0.01" />
                        <span asp-validation-for="TicketPrice" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn btn-primary w-100">Create</button>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 8px;
        border: 1px solid #e0e0e0;
        background-color: #ffffff;
    }

    .form-label {
        font-weight: 600;
        color: #333;
    }

    .form-control {
        padding: 10px;
        border-radius: 5px;
        border: 1px solid #ced4da;
        transition: border-color 0.3s;
    }

        .form-control:focus {
            border-color: #004080;
            box-shadow: 0 0 5px rgba(0, 64, 128, 0.2);
        }

    .btn-primary {
        background-color: #004080;
        border: none;
        color: #ffffff;
        font-weight: 600;
        transition: background-color 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #003366;
        }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
