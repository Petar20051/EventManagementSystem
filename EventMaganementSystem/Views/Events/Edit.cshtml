@model EventManagementSystem.Core.Models.Events.EventViewModel

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h2 class="mb-0">Edit Event</h2>
        </div>
        <div class="card-body">
            <form asp-action="Edit" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />

                <!-- Event Name -->
                <div class="form-group mb-3">
                    <label asp-for="Name" class="form-label">Event Name</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <!-- Event Description -->
                <div class="form-group mb-3">
                    <label asp-for="Description" class="form-label">Description</label>
                    <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <!-- Event Date -->
                <div class="form-group mb-3">
                    <label asp-for="Date" class="form-label">Date</label>
                    <input asp-for="Date" type="date" class="form-control" />
                    <span asp-validation-for="Date" class="text-danger"></span>
                </div>

                <!-- Venue Selection -->
                <div class="form-group mb-3">
                    <label asp-for="VenueId" class="form-label">Venue</label>
                    <select asp-for="VenueId" asp-items="@(new SelectList(Model.Venues, "Id", "Name"))" class="form-control">
                        <option value="">Select Venue</option>
                    </select>
                    <span asp-validation-for="VenueId" class="text-danger"></span>
                </div>

                <!-- Image URL -->
                <div class="form-group mb-3">
                    <label asp-for="ImageUrl" class="form-label">Event Image URL</label>
                    <input asp-for="ImageUrl" class="form-control" placeholder="Enter the URL of the event image" />
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                </div>

                <!-- Display Preview of the Image URL if provided -->
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <div class="mb-3 text-center">
                        <label class="form-label">Current Event Image</label>
                        <div class="d-flex justify-content-center">
                            <img src="@Model.ImageUrl" class="img-fluid rounded border" alt="Event Image" style="max-width: 100%; height: auto; max-height: 300px; border: 1px solid #ced4da;">
                        </div>
                    </div>
                }

                <!-- Submit and Cancel Buttons -->
                <div class="d-flex justify-content-between mt-4">
                    <button type="submit" class="btn btn-primary">Update</button>
                    <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 8px;
        border: 1px solid #e0e0e0;
        background-color: #ffffff;
    }

    .card-header {
        font-size: 1.5em;
        font-weight: bold;
    }

    .form-label {
        font-weight: 600;
        color: #333;
    }

    .form-control {
        padding: 10px;
        border-radius: 5px;
        border: 1px solid #ced4da;
        transition: border-color 0.3s;
    }

        .form-control:focus {
            border-color: #004080;
            box-shadow: 0 0 5px rgba(0, 64, 128, 0.2);
        }

    .btn-primary {
        background-color: #004080;
        border: none;
        color: #ffffff;
        font-weight: 600;
        transition: background-color 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #003366;
        }

    .btn-secondary {
        background-color: #6c757d;
        color: #ffffff;
        font-weight: 600;
        transition: background-color 0.3s ease;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
        }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
