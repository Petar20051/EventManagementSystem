@using EventManagementSystem.Core.Models.Events
@using System.Security.Claims
@model EventDetailsViewModel

<h2>@Model.Name</h2>
<p>Date: @Model.Date</p>
<p>Location: @Model.Location</p>
<p>Address: @Model.Address</p>

@if (User.FindFirstValue(ClaimTypes.NameIdentifier)==Model.OrganizerId)
{
    <a asp-action="Attendees"  class="btn btn-primary">
        View Attendees
    </a>
}
<a asp-controller="EventFeedback" asp-action="Index" asp-route-eventId="@Model.Id" class="btn btn-primary mt-3">
    Leave Feedback
</a>



