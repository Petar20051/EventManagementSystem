@using EventManagementSystem.Core.Models.Events
@model List<AttendeeInfo>

<div class="container mt-5">
    <h2 class="text-center mb-4" style="color: #004080;">Attendees List</h2>

    @if (Model == null || !Model.Any())

    {
        <div class="alert alert-warning text-center" role="alert">
            No attendees found for this event.
        </div>
    }

    else

    {
        <table class="table table-bordered table-hover shadow-sm">
            <thead class="table-primary">
                <tr>
                    <th>User Email</th>
                    <th>Attendee Count</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var attendee in Model)

                {
                    <tr>
                        <td>@attendee.UserEmail</td>
                        <td>@attendee.AttendeeCount</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>

<style>
    .container {
        max-width: 800px;
    }

    .table {
        border-radius: 8px;
        overflow: hidden;
        background-color: #ffffff;
    }

    .table-primary {
        background-color: #004080; 
        color: #ffffff;
        font-weight: 600;
    }

    h2 {
        font-weight: bold;
    }
</style>