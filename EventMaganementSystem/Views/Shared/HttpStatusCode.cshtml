@{
    ViewData["Title"] = "Error";
    var errorCode = ViewData["ErrorCode"] as int?;
    var errorMessage = ViewData["ErrorMessage"] as string;
}

<div class="container text-center mt-5">
    <h1 class="display-4 text-danger">Error @errorCode</h1>
    <p class="lead">@errorMessage</p>
    <a asp-action="Index" asp-controller="Home" class="btn btn-primary mt-4">Go to Home</a>
</div>

<style>
    .container {
        margin-top: 50px;
    }

    h1 {
        font-size: 3em;
        font-weight: bold;
    }

    p {
        font-size: 1.2em;
        margin-bottom: 20px;
    }

    .btn {
        padding: 10px 20px;
        font-size: 1.1em;
        border-radius: 5px;
    }

    .btn-primary {
        background-color: #007bff;
        color: #ffffff;
    }

    .btn-primary:hover {
        background-color: #0056b3;
    }
</style>

