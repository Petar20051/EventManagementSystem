@using EventManagementSystem.Core.Models
@model FeedbackViewModel

@{
    ViewData["Title"] = "Event Feedback";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">@Model.EventName - @ViewData["Title"]</h3>
                </div>
                <div class="card-body">
                    <!-- Feedback List -->
                    <h4 class="mb-4" style="color: #004080;">Feedback for @Model.EventName</h4>
                    <ul id="messagesList" class="list-group mb-4">
                        @if (Model.Feedbacks != null && Model.Feedbacks.Any())
                        {
                            @foreach (var feedback in Model.Feedbacks)
                            {
                                <li class="list-group-item">
                                    <div class="d-flex justify-content-between">
                                        <strong>@feedback.User?.UserName</strong>
                                        <small class="text-muted">@feedback.FeedbackDate.ToString("g")</small>
                                    </div>
                                    <p class="mb-0">@feedback.FeedbackContent</p>
                                </li>
                            }
                        }
                        else
                        {
                            <li class="list-group-item text-muted">No feedback available for this event.</li>
                        }
                    </ul>

                    <!-- Feedback Form -->
                    <h4 class="mb-3" style="color: #004080;">Leave Your Feedback</h4>
                    <div class="form-group mb-3">
                        <textarea id="messageInput" class="form-control" rows="3" placeholder="Write your feedback here..." style="resize: none;"></textarea>
                    </div>
                    <button id="sendButton" class="btn btn-primary w-100">Submit Feedback</button>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 8px;
        border: 1px solid #e0e0e0;
        background-color: #ffffff;
    }

    .card-header {
        font-size: 1.25em;
        font-weight: bold;
    }

    h4 {
        font-weight: 600;
    }

    .list-group-item {
        border: none;
        border-bottom: 1px solid #e0e0e0;
        padding: 15px;
    }

        .list-group-item:last-child {
            border-bottom: none;
        }

    .form-control:focus {
        border-color: #004080;
        box-shadow: 0 0 5px rgba(0, 64, 128, 0.2);
    }

    #sendButton {
        background-color: #004080;
        border: none;
        color: #ffffff;
        font-weight: 600;
        transition: background-color 0.3s ease;
    }

        #sendButton:hover {
            background-color: #003366;
        }
</style>
