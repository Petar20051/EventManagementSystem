@using EventManagementSystem.Infrastructure.Entities
@model IEnumerable<Ticket>

<h2 class="text-center mb-5">Your Tickets</h2>

<!-- Updated CSS for improved styling -->
<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f0f2f5; /* Slightly lighter background for better contrast */
    }

    h2 {
        color: #007bff; /* Bootstrap primary color for header */
        font-weight: 700;
        text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.1); /* Subtle text shadow to enhance the title */
    }

    .card {
        border-radius: 15px;
        box-shadow: 0 6px 15px rgba(0, 0, 0, 0.1); /* Enhanced shadow for a more elevated effect */
        transition: transform 0.2s, box-shadow 0.2s; /* Smooth hover transition */
        overflow: hidden; /* Prevent content overflow for rounded corners */
    }

    .card:hover {
        transform: translateY(-10px); /* Slight upward movement on hover */
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2); /* Increase shadow depth on hover */
    }

    .card-header {
        font-size: 1.3rem;
        font-weight: 600;
        background: linear-gradient(90deg, #007bff, #00c6ff); /* Gradient background for card header */
        color: #fff; /* White text for better contrast */
        text-align: center; /* Center-align header text */
    }

    .card-body {
        font-size: 1rem;
        padding: 25px 20px 45px; /* Increase bottom padding to make space for QR code */
        background-color: #fff; /* White background to contrast with the card shadow */
    }

    .card-title {
        font-size: 1.2rem;
        margin-bottom: 15px;
        color: #333; /* Darker color for better readability */
        text-align: center; /* Center-align title */
    }

    .card-text {
        font-size: 0.95rem;
        color: #666; /* Subtle gray for additional details */
        margin-bottom: 20px;
    }

    /* Adjust QR code container for better display */
    .qr-code-container {
        margin: 20px auto; /* Center the QR code inside the card with margin */
        text-align: center; /* Center-align the QR code */
    }

    .qr-code-container svg {
        width: 35%; /* Ensure the SVG fits fully within the container */
        height: auto; /* Maintain the aspect ratio */
        transition: transform 0.2s;
       transform:scale(1.3);
    }

    

    /* Styling for mobile responsiveness */
   
</style>

<div class="container">
    <div class="row">
        @foreach (var ticket in Model)
        {
            <div class="col-md-4 col-sm-6 mb-4">
                <div class="card border-primary h-100">
                    <div class="card-header">
                        Event: @ticket.Event.Name
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">Ticket ID: @ticket.Id</h5>
                        <p class="card-text">
                            <strong>Event Date:</strong> @ticket.Event.Date.ToString("MMMM dd, yyyy") <br />
                            <strong>Purchase Date:</strong> @ticket.PurchaseDate.ToString("MMMM dd, yyyy HH:mm")
                        </p>
                        <div class="qr-code-container">
                            @Html.Raw(ticket.QRCodeSvg) <!-- Render the QR code SVG -->
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
