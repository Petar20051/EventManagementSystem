@using EventManagementSystem.Infrastructure.Entities
@model IEnumerable<Ticket>

<h2 class="text-center mb-5">Your Tickets</h2>

<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f0f2f5;
    }

    h2 {
        color: #007bff; 
        font-weight: 700;
        text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.1); 
    }

    .card {
        border-radius: 15px;
        box-shadow: 0 6px 15px rgba(0, 0, 0, 0.1); 
        transition: transform 0.2s, box-shadow 0.2s;
        overflow: hidden;
    }

    .card:hover {
        transform: translateY(-10px);
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2); 
    }

    .card-header {
        font-size: 1.3rem;
        font-weight: 600;
        background: linear-gradient(90deg, #007bff, #00c6ff); 
        color: #fff; 
        text-align: center; 
    }

    .card-body {
        font-size: 1rem;
        padding: 25px 20px 45px;
        background-color: #fff; 
    }

    .card-title {
        font-size: 1.2rem;
        margin-bottom: 15px;
        color: #333; 
        text-align: center; 
    }

    .card-text {
        font-size: 0.95rem;
        color: #666; 
        margin-bottom: 20px;
    }

    
    .qr-code-container {
        margin: 20px auto; 
        text-align: center;
    }

    .qr-code-container svg {
        width: 35%; 
        height: auto; 
        transition: transform 0.2s;
       transform:scale(1.3);
    }

    

    
   
</style>

<div class="container">
    <div class="row">
        @foreach (var ticket in Model)
        {
            <div class="col-md-4 col-sm-6 mb-4">
                <div class="card border-primary h-100">
                    <div class="card-header">
                        Event: @ticket.Event.Name
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">Ticket ID: @ticket.Id</h5>
                        <p class="card-text">
                            <strong>Event Date:</strong> @ticket.Event.Date.ToString("MMMM dd, yyyy") <br />
                            <strong>Purchase Date:</strong> @ticket.PurchaseDate.ToString("MMMM dd, yyyy HH:mm")
                        </p>
                        <div class="qr-code-container">
                            @Html.Raw(ticket.QRCodeSvg) 
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
