<h2>My Tickets</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Event Name</th>
            <th>Date</th>
            <th>Purchase Date</th>
            <th>Number of People</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ticket in Model)
        {
            <tr>
                <td>@ticket.Event.Name</td>
                <td>@ticket.Event.Date.ToString("MMMM dd, yyyy")</td>
                <td>@ticket.PurchaseDate.ToString("MMMM dd, yyyy HH:mm")</td>
                <td>@ticket.Event.AttendeeCount</td>
            </tr>
        }
    </tbody>
</table>
