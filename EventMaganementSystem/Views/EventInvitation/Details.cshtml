@using EventManagementSystem.Infrastructure.Data.Entities
@model EventInvitation

@{
    ViewBag.Title = "Invitation Details";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm p-4">
                <h2 class="text-center" style="color: #004080;">Invitation Details</h2>
                <div class="mt-4">
                    <p><strong>Event:</strong> @Model.Event.Name</p>
                    <p><strong>Sender:</strong> @Model.Sender.UserName</p>
                    <p><strong>Receiver:</strong> @Model.Receiver.UserName</p>
                    <p><strong>Invitation Date:</strong> @Model.InvitationDate.ToString("MM/dd/yyyy")</p>
                    <p><strong>Status:</strong> @Model.Status</p>
                </div>

                <div class="text-center mt-4">
                    <a href="@Url.Action("Index")" class="btn btn-secondary w-100">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 8px;
        border: 1px solid #e0e0e0;
        background-color: #ffffff;
    }

    h2 {
        font-weight: bold;
    }

    p {
        font-size: 1.1em;
        color: #333;
        margin: 10px 0;
    }

    .btn-secondary {
        background-color: #6c757d;
        color: #ffffff;
        font-weight: 600;
        transition: background-color 0.3s ease;
    }
    .btn-secondary:hover {
        background-color: #5a6268;
    }
</style>
