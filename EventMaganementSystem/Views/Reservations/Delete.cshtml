@using EventManagementSystem.Infrastructure.Entities
@model Reservation

@{
    ViewData["Title"] = "Delete Reservation";
}

<div class="container mt-5" style="max-width: 600px;">
    <div class="card shadow-sm">
        <div class="card-header bg-danger text-white">
            <h2 class="text-center mb-0">@ViewData["Title"]</h2>
        </div>
        <div class="card-body">
            @if (Model != null)
            {
                <h4 class="text-center mb-4">Are you sure you want to delete this reservation?</h4>
                <div class="mb-4">
                    <h5>Reservation Details</h5>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-4">Event</dt>
                        <dd class="col-sm-8">@Model.Event.Name</dd>

                        <dt class="col-sm-4">Attendees Count</dt>
                        <dd class="col-sm-8">@Model.AttendeesCount</dd>

                        <dt class="col-sm-4">Reservation Date</dt>
                        <dd class="col-sm-8">@Model.ReservationDate.ToShortDateString()</dd>
                    </dl>
                </div>

                <form asp-action="Delete" method="post" class="text-center">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-danger me-2">Delete</button>
                    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                </form>
            }
            else
            {
                <h4 class="text-center text-muted">No reservation found to delete.</h4>
            }
        </div>
    </div>
</div>

<style>
    .container {
        max-width: 600px;
    }

    .card {
        border-radius: 8px;
    }

    .card-header {
        font-weight: bold;
    }

    h4, h5 {
        color: #343a40;
        font-weight: bold;
    }

    .btn-danger {
        background-color: #dc3545;
        border: none;
    }

    .btn-danger:hover {
        background-color: #c82333;
    }

    .btn-secondary {
        font-weight: bold;
    }

    dl.row dt {
        font-weight: bold;
    }
</style>

