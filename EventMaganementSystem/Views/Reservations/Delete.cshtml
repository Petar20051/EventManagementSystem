@using EventManagementSystem.Infrastructure.Entities
@model Reservation

@{
    ViewData["Title"] = "Delete Reservation";
}

<h1>Delete Reservation</h1>

@if (Model != null)
{
    <h3>Are you sure you want to delete this reservation?</h3>
    <div>
        <h4>Reservation</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                Event
            </dt>
            <dd class="col-sm-10">
                @Model.Event.Name
            </dd>
            <dt class="col-sm-2">
                Attendees Count
            </dt>
            <dd class="col-sm-10">
                @Model.AttendeesCount
            </dd>
            <dt class="col-sm-2">
                Reservation Date
            </dt>
            <dd class="col-sm-10">
                @Model.ReservationDate.ToShortDateString()
            </dd>
        </dl>
    </div>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
}
else
{
    <h4>No reservation found to delete.</h4>
}

