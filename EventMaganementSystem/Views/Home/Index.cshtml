@using EventManagementSystem.Core.Models.Home
@model HomePageViewModel

<!-- Inline CSS for Enhanced Design -->
<style>
    /* Global Styling */
    .full-width-section {
        width: 100vw;
        margin-left: calc(50% - 50vw);
        padding: 60px 0;
    }

    .section-inner {
        max-width: 1100px;
        margin: 0 auto;
        padding: 0 20px;
    }

    /* Hero Section Styling */
    .hero-section {
        background-color: #004080; /* Navy blue */
        color: #ffffff;
        text-align: center;
    }

        .hero-section h1 {
            font-size: 3.5em;
            font-weight: 700;
            margin-bottom: 10px;
        }

        .hero-section p {
            font-size: 1.3em;
            margin-bottom: 20px;
        }

        .hero-section .btn {
            padding: 12px 25px;
            font-size: 1.1em;
            border-radius: 5px;
            transition: all 0.3s ease;
        }

        .hero-section .btn-light {
            background-color: #ffffff;
            color: #004080;
            border: 1px solid #ffffff;
        }

            .hero-section .btn-light:hover {
                background-color: #f0f0f0;
                color: #004080;
            }

        .hero-section .btn-outline-light {
            border: 1px solid #ffffff;
            color: #ffffff;
        }

            .hero-section .btn-outline-light:hover {
                background-color: #ffffff;
                color: #004080;
            }

    /* Event Cards */
    .card {
        border: 1px solid #e0e0e0;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.15);
        }

    .card-title {
        font-weight: bold;
        color: #333;
    }

    .btn-primary {
        background-color: #0056b3;
        border: none;
        color: white;
        transition: background-color 0.3s;
    }

        .btn-primary:hover {
            background-color: #004080;
        }

    /* Section Titles */
    h2 {
        font-weight: 700;
        color: #333;
        margin-bottom: 1.5em;
    }

    /* Combined Section Styling */
    .combined-section {
        background-color: #f0f4f8;
        padding: 60px 0;
    }

        .combined-section h2 {
            color: #004080;
        }

        .combined-section .feature-box {
            background-color: #ffffff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            transition: transform 0.2s ease, box-shadow 0.2s ease;
        }

            .combined-section .feature-box:hover {
                transform: translateY(-5px);
                box-shadow: 0 8px 16px rgba(0, 0, 0, 0.15);
            }

        .combined-section i {
            font-size: 2.5em;
            color: #004080;
        }
</style>

<!-- Hero Section -->
<div class="full-width-section hero-section">
    <div class="section-inner">
        <h1>Welcome to Event Management System</h1>
        <p class="lead">Discover, reserve, and experience amazing events near you!</p>
        <div class="mt-4">
            <a asp-action="Index" asp-controller="Events" class="btn btn-light btn-lg mx-2">Browse Events</a>
            <a asp-action="Create" asp-controller="Events" class="btn btn-outline-light btn-lg mx-2">Create an Event</a>
        </div>
    </div>
</div>

<!-- Featured Events Section -->
<div class="full-width-section bg-white">
    <div class="section-inner">
        <h2 class="text-center text-dark mb-4">Upcoming Events</h2>
        <div class="row justify-content-center">
            @foreach (var eventItem in Model.UpcomingEvents)
            {
                <div class="col-md-3 mb-4">
                    <div class="card h-100">
                        <img src="@eventItem.ImageUrl" class="card-img-top" alt="@eventItem.Name" style="height: 200px; object-fit: cover;">
                        <div class="card-body">
                            <h5 class="card-title">@eventItem.Name</h5>
                            <p class="text-muted">@eventItem.Date.ToString("MMMM dd, yyyy")</p>
                            <p class="card-text">@eventItem.Description</p>
                            <a asp-action="Create" asp-controller="Reservations" asp-route-eventId="@eventItem.Id" class="btn btn-primary w-100">Reserve Now</a>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="text-center mt-4">
            <a asp-action="Index" asp-controller="Events" class="btn btn-outline-primary">See All Events</a>
        </div>
    </div>
</div>

<div class="full-width-section combined-section">
    <div class="section-inner">
        <div class="row">
            <!-- Why Choose Us Column -->
            <div class="col-md-6 px-4">
                <h2 class="text-center mb-4">Why Choose Us?</h2>
                <div class="d-flex flex-column align-items-center">
                    <div class="feature-box mb-4 text-center">
                        <i class="bi bi-calendar-event"></i>
                        <h5 class="mt-3">Easy Event Reservations</h5>
                        <p>Reserve your spot at the most popular events with just a few clicks.</p>
                    </div>
                    <div class="feature-box mb-4 text-center">
                        <i class="bi bi-shield-lock"></i>
                        <h5 class="mt-3">Secure Payments</h5>
                        <p>Our platform ensures secure payment processing for peace of mind.</p>
                    </div>
                    <div class="feature-box mb-4 text-center">
                        <i class="bi bi-bell"></i>
                        <h5 class="mt-3">Real-Time Notifications</h5>
                        <p>Stay updated with reminders and notifications for upcoming events.</p>
                    </div>
                </div>
            </div>

            <!-- How It Works Column -->
            <div class="col-md-6 px-4">
                <h2 class="text-center mb-4">How It Works</h2>
                <div class="d-flex flex-column align-items-center">
                    <div class="feature-box mb-4 text-center">
                        <i class="bi bi-search"></i>
                        <h5 class="mt-3">1. Discover Events</h5>
                        <p>Find events that suit your interests, from concerts to conferences.</p>
                    </div>
                    <div class="feature-box mb-4 text-center">
                        <i class="bi bi-check2-circle"></i>
                        <h5 class="mt-3">2. Reserve Your Spot</h5>
                        <p>Secure your spot easily and receive a confirmation immediately.</p>
                    </div>
                    <div class="feature-box mb-4 text-center">
                        <i class="bi bi-star"></i>
                        <h5 class="mt-3">3. Enjoy the Event</h5>
                        <p>Attend, network, and enjoy a seamless event experience.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Additional CSS for Consistent Box Sizes -->
<style>
    .feature-box {
        width: 90%; /* Keep a consistent width for symmetry */
        min-height: 180px; /* Set a minimum height to ensure consistent box size */
        background-color: #ffffff;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

        .feature-box:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.15);
        }

        .feature-box i {
            font-size: 2.5em;
            color: #004080;
        }
</style>


@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
